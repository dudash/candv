extends layout
block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Sign in access private boards
                    div.account-wall
                        img.profile-img(src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120' alt='')
                        form.form-signin
                            input.form-control(type='text' placeholder='Email' required autofocus)
                            input.form-control(type='password' placeholder='Password' required)
                            button.btn.btn-lg.btn-primary.btn-block(type='subimt') Sign in
                            label.checkbox.pull-left
                                input(type='checkbox' value='remember-me') 
                                span Remember me
                    a.text-center.new-account(href='./create') Create an account
